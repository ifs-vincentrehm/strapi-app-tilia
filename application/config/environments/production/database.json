{
  "defaultConnection": "default",
  "connections": {
    "default": {
      "connector": "bookshelf",
      "settings": {
        "client": "postgres",
        "host": "${process.env.DB_HOST}",
        "port": "${process.env.DB_PORT}",
        "database": "${process.env.DATABASE_NAME}",
        "username": "${process.env.DATABASE_USERNAME}",
        "password": "${process.env.DATABASE_PASSWORD}",
        "schema": "public"
      },
      "options": {
        "debug": false,
        "pool": {
          "min": 0,
          "max": 5
        }
      }
    }
  }
}